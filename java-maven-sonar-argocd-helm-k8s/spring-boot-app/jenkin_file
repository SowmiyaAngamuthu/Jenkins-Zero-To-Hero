pipeline {
    agent any
    
    tools {
        maven 'maven3'
    }
    
   
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-token', url: 'https://github.com/SowmiyaAngamuthu/Jenkins-Zero-To-Hero.git'
            }
        }
        
        
        
       stage('Build') {
            steps {
                sh pwd
                sh 'mvn -f java-maven-sonar-argocd-helm-k8s/spring-boot-app/pom.xml clean install'
            }
        }
        
}
}
